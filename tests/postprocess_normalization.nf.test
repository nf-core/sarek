def projectDir = new File('.').absolutePath

nextflow_pipeline {

    name "Test pipeline"
    script "../main.nf"
    tag "pipeline"
    tag "pipeline_sarek"
    tag "cpu"

    def test_scenario = [
        [
            name: "-profile test --normalize_vcfs --tools freebayes,haplotypecaller",
            params: [
                input: "${projectDir}/tests/csv/3.0/mapped_joint_bam.csv",
                step: 'variant_calling',
                normalize_vcfs: true,
                tools: 'freebayes,haplotypecaller'
            ]
        ]
    ]

    // Generate tests for each scenario
    test_scenario.each { scenario ->
        test(scenario.name, UTILS.get_test(scenario))
    }
}
