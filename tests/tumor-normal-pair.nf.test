def projectDir = new File('.').absolutePath

nextflow_pipeline {

    name "Test pipeline"
    script "../main.nf"
    tag "pipeline"
    tag "pipeline_sarek"
    tag "conda"

    def test_scenario = [
        [
            name: "-profile test --input tests/csv/3.0/fastq_pair.csv",
            params: [
                input: "${projectDir}/tests/csv/3.0/fastq_pair.csv"
            ]
        ]
    ]

    test_scenario.each { scenario ->
        test(scenario.name, UTILS.get_test(scenario))
    }
}
