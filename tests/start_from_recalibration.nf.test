def projectDir = new File('.').absolutePath

nextflow_pipeline {

    name "Test pipeline"
    script "../main.nf"
    tag "pipeline"
    tag "pipeline_sarek"
    tag "cpu"

    def test_scenario = [
        [
            name: "-profile test --input tests/csv/3.0/mapped_single_cram.csv --step recalibrate --tools null",
            params: [
                outdir: "$outputDir",
                input: "${projectDir}/tests/csv/3.0/prepare_recalibration_single_cram.csv",
                step: 'recalibrate',
                tools: null
            ]
        ],
        [
            name: "-profile test --input tests/csv/3.0/mapped_single_bam.csv --step recalibrate --skip_tools baserecalibrator --tools strelka",
            params: [
                outdir: "$outputDir",
                input: "${projectDir}/tests/csv/3.0/prepare_recalibration_single_bam.csv",
                step: 'recalibrate',
                skip_tools: "baserecalibrator",
                tools: 'strelka'
            ]
        ],
        [
            name: "-profile test --input tests/csv/3.0/mapped_single_cram.csv --step recalibrate --skip_tools baserecalibrator --tools strelka",
            params: [
                outdir: "$outputDir",
                input: "${projectDir}/tests/csv/3.0/prepare_recalibration_single_cram.csv",
                step: 'recalibrate',
                skip_tools: "baserecalibrator",
                tools: 'strelka'
            ]
        ],
        [
            name: "-profile test --input tests/csv/3.0/mapped_single_bam.csv --step recalibrate --tools null",
            params: [
                outdir: "$outputDir",
                input: "${projectDir}/tests/csv/3.0/prepare_recalibration_single_bam.csv",
                step: 'recalibrate',
                tools: null
            ]
        ]
    ]

    test_scenario.each { scenario ->
        test(scenario.name, UTILS.get_test(scenario))
    }
}
