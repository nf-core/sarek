def projectDir = new File('.').absolutePath

nextflow_pipeline {

    name "Test pipeline"
    script "../main.nf"

    def test_scenario = [
        [
            name: "-profile test --normalize_vcfs --concatenate_vcfs --tools freebayes,strelka",
            params: [
                input: "${projectDir}/tests/csv/3.0/mapped_joint_bam.csv",
                step: 'variant_calling',
                normalize_vcfs: true,
                concatenate_vcfs: true,
                tools: 'freebayes,strelka'
            ],
            include_freebayes_unfiltered: true,
            ignoreFiles: '**/{testN.germline,testT.germline,*freebayes,*freebayes.filtered.bcftools_filtered*}.vcf{,.gz}',
            no_conda: true
        ],
        [
            name: "-profile test --filter_vcfs --normalize_vcfs --concatenate_vcfs --tools freebayes,strelka",
            params: [
                input: "${projectDir}/tests/csv/3.0/mapped_joint_bam.csv",
                step: 'variant_calling',
                normalize_vcfs: true,
                concatenate_vcfs: true,
                filter_vcfs: true,
                tools: 'freebayes,strelka'
            ],
            include_freebayes_unfiltered: true,
            ignoreFiles: '**/{testN.germline,testT.germline,*freebayes,*freebayes.filtered.bcftools_filtered*}.vcf{,.gz}',
            no_conda: true
        ]
    ]

    // Generate tests for each scenario
    test_scenario.each { scenario ->
        test(scenario.name, UTILS.getTest(scenario))
    }
}
