nextflow_pipeline {

    name "Test pipeline"
    script "../main.nf"
    tag "pipeline"
    tag "pipeline_sarek"

    def test_scenario = [
        [
            name: "-profile test --normalize_vcfs --concatenate_vcfs --tools freebayes,haplotypecaller",
            params: [
                input: "${projectDir}/tests/csv/3.0/mapped_joint_bam.csv",
                step: 'variant_calling',
                normalize_vcfs: true,
                concatenate_vcfs: true,
                tools: 'freebayes,haplotypecaller',
                modules_testdata_base_path: 'https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/'
            ]
        ]
    ]

    // Generate tests for each scenario
    test_scenario.each { scenario ->
        test(scenario.name, UTILS.get_test(scenario))
    }
}
