def projectDir = new File('.').absolutePath

nextflow_pipeline {

    name "Test pipeline"
    script "../main.nf"
    tag "pipeline"
    tag "pipeline_sarek"
    profile "test,gpu"

    def test_scenario = [
        [
            name: "-profile test --aligner parabricks",
            params: [
                aligner: 'parabricks',
                save_reference: true,
                tools: ''
            ],
            gpu: true
        ],
        [
            name: "-profile test --aligner parabricks --tools mutect2",
            params: [
                aligner: 'parabricks',
                save_reference: true,
                tools: 'mutect2'
            ],
            gpu: true
        ]
    ]

    // Generate tests for each scenario
    test_scenario.each { scenario ->
        test(scenario.name, UTILS.get_test(scenario))
    }
}
