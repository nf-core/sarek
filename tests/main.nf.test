nextflow_pipeline {

    name "Test pipeline"
    script "../main.nf"
    tag "pipeline"
    tag "pipeline_sarek"

    test("Run with profile test") {

        when {
            params {
                outdir                       = "results"
                max_cpus                     = 2
                max_memory                   = '6.GB'
                max_time                     = '6.h'
                input                        = "$projectDir/tests/csv/3.0/fastq_single.csv"
                validationSchemaIgnoreParams = 'test_data_base,test_data,genomes'
                use_gatk_spark               = false
            }
        }

        then {
            assertAll(
                { assert workflow.success }
            )
        }
    }

}
