// PREPARE INTERVALS

process {

    withName: 'CREATE_INTERVALS_BED' {
        publishDir = [
            //specify to avoid publishing, overwritten otherwise
            enabled: false
        ]
    }

    withName: 'GATK4_INTERVALLISTTOBED' {
        publishDir = [
            //specify to avoid publishing, overwritten otherwise
            enabled: false
        ]
    }

    withName: 'TABIX_BGZIPTABIX_INTERVAL_SPLIT|TABIX_BGZIPTABIX_INTERVAL_COMBINED' {
        ext.prefix       = {"${meta.id}"}
        publishDir = [
            //specify to avoid publishing, overwritten otherwise
            enabled: false
        ]
    }
}
