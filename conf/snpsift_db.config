/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    SnpSift Database Configuration
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines pre-configured sets of SnpSift annotation databases.
    Can be used by specifying:
        --snpsift_db_set <set_name> --tools snpsift
----------------------------------------------------------------------------------------
*/

params {
    // SnpSift database sets
    snpsift_db_sets = [
        // Example minimal configuration with dbSNP only
        'GRCh37_minimal': [
            databases: [
                [
                    name: 'dbsnp',
                    file: "${params.igenomes_base}/Homo_sapiens/GATK/GRCh37/Annotation/GATKBundle/dbsnp_138.b37.vcf.gz",
                    file_tbi: "${params.igenomes_base}/Homo_sapiens/GATK/GRCh37/Annotation/GATKBundle/dbsnp_138.b37.vcf.gz.tbi",
                    id: true,       // Use -id flag to add RS IDs
                    fields: '',     // Empty = annotate all fields
                    prefix: ''      // No prefix for dbSNP
                ]
            ]
        ],

        'GRCh38_minimal': [
            databases: [
                [
                    name: 'dbsnp',
                    file: "${params.igenomes_base}/Homo_sapiens/GATK/GRCh38/Annotation/GATKBundle/dbsnp_146.hg38.vcf.gz",
                    file_tbi: "${params.igenomes_base}/Homo_sapiens/GATK/GRCh38/Annotation/GATKBundle/dbsnp_146.hg38.vcf.gz.tbi",
                    id: true,
                    fields: '',
                    prefix: ''
                ]
            ]
        ],

        // Example comprehensive configuration for GRCh37
        // NOTE: This is a template. Update paths to point to your actual database files.
        // Uncomment and customize as needed for your institution's databases.
        /*
