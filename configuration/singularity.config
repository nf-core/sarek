/*
vim: syntax=groovy
-*- mode: groovy;-*-
 * -------------------------------------------------
 * Nextflow config file for Singularity
 * -------------------------------------------------
 * Used for the pipeline on Singularity.
 * Modify for your own usage.
 * -------------------------------------------------
 */

singularity {
  autoMounts = true
  enabled = true
}

process {
  $BuildBWAindexes.container          = 'containers/mapreads-1.1.img'
  $BuildPicardIndex.container         = 'containers/picard-1.1.img'
  $BuildSAMToolsIndex.container       = 'containers/samtools-1.1.img'
  $BuildVCFIndex.container            = 'containers/igvtools-1.1.img'
  $ConcatVCF.container                = 'containers/concatvcf-1.1.img'
  $CreateRecalibrationTable.container = 'containers/gatk-1.1.img'
  $IndelRealigner.container           = 'containers/gatk-1.1.img'
  $MapReads.container                 = 'containers/mapreads-1.1.img'
  $MarkDuplicates.container           = 'containers/picard-1.1.img'
  $MergeBams.container                = 'containers/samtools-1.1.img'
  $RealignerTargetCreator.container   = 'containers/gatk-1.1.img'
  $RecalibrateBam.container           = 'containers/gatk-1.1.img'
  $RunAlleleCount.container           = 'containers/runallelecount-1.1.img'
  $RunAscat.container                 = 'containers/runascat-1.1.img'
  $RunBamQC.container                 = 'containers/qualimap-1.1.img'
  $RunBcftoolsStats.container         = 'containers/bcftools-1.1.img'
  $RunConvertAlleleCounts.container   = 'containers/runconvertallelecounts-1.1.img'
  $RunFastQC.container                = 'containers/fastqc-1.1.img'
  $RunFreeBayes.container             = 'containers/freebayes-1.1.img'
  $RunGenotypeGVCFs.container         = 'containers/gatk-1.1.img'
  $RunHaplotypecaller.container       = 'containers/gatk-1.1.img'
  $RunManta.container                 = 'containers/runmanta-1.1.img'
  $RunMultiQC.container               = 'containers/multiqc-1.1.img'
  $RunMutect1.container               = 'containers/mutect1-1.1.img'
  $RunMutect2.container               = 'containers/gatk-1.1.img'
  $RunSamtoolsStats.container         = 'containers/samtools-1.1.img'
  $RunSnpeff.container                = {params.genome == "GRCh38" ? 'containers/snpeffgrch38-1.1.img' : 'containers/snpeffgrch37-1.1.img'}
  $RunStrelka.container               = 'containers/strelka-1.1.img'
  $RunVEP.container                   = {params.genome == "GRCh38" ? 'containers/vepgrch38-1.1.img' : 'containers/vepgrch37-1.1.img'}
}
