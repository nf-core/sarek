nextflow_process {

    name "Test Process BWA_INDEX"
    tag "modules_nfcore"
    tag "modules"
    tag "bwa"
    tag "bwa/index"
    script "../main.nf"
    process "BWA_INDEX"

    test("BWA index") {

        when {
            process {
                """
                input[0] = [
                    [id: 'test'],
                    file(params.modules_testdata_base_path + 'genomics/sarscov2/genome/genome.fasta', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
